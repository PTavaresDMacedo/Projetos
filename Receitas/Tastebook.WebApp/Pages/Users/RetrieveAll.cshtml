}

<form method="post">
    <div class="form-group">
        <label>First Name</label>
        <input name="first_name" class="form-control" placeholder="Enter First Name">
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input name="last_name" class="form-control" placeholder="Enter Last Name">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input name="email" class="form-control" placeholder="Enter Email">
    </div>
    <div class="form-group">
        <label>Login</label>
        <input name="login" class="form-control" placeholder="Enter Login">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input name="password" class="form-control" placeholder="Enter Password">
    </div>
